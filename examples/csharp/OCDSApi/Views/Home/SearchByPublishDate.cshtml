@using OCDSApi.Models
@model SearchViewModel
@{
    ViewBag.Title = "API Search by Publish Date";
}
<script type='text/javascript'>
$(function(){
    $('.datePicker').datepicker({
        format: 'yyyy-mm-dd',
        calendarWeeks: true,
        todayHighlight: true,
        autoclose: true
    });
});

</script>
<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-8">
        <section id="searchForm">
            @using (Html.BeginForm("SearchApi", "Home", FormMethod.Get, new { @class = "form-horizontal", role = "form" }))
            {
                <hr />
                <div class="form-group">
                    <label class="col-md-2 control-label">Publish Date</label>
                    <div class="col-md-10">

                        <label for="DataStart">from: </label>
                        <div class="input-group date">
                            <input type="text" id="DataStart" name="DataStart" class="form-control datePicker"><span class="input-group-addon invisible"><i class="glyphicon glyphicon-calendar"></i></span>
                        </div>
                        <label for="DateEnd"> to: </label>
                        <div class="input-group date">
                            <input type="text" id="DateEnd" name="DateEnd" class="form-control datePicker"><span class="input-group-addon invisible"><i class="glyphicon glyphicon-calendar"></i></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Search" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>
